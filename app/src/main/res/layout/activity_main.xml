<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.android.mathriddles.MainActivity">

        <EditText
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_hint"
            android:inputType="textCapWords" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/Task1"
            android:textStyle="italic" />

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/first" />

        <EditText
            android:id="@+id/first_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer_hint"
            android:inputType="number" />

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/second" />

        <EditText
            android:id="@+id/second_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer_hint"
            android:inputType="number" />

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/third" />

        <EditText
            android:id="@+id/third_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer_hint"
            android:inputType="number" />

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/fourth" />

        <EditText
            android:id="@+id/fourth_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer_hint"
            android:inputType="number" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_height="wrap_content"
            android:text="@string/fifth" />

        <EditText
            android:id="@+id/fifth_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer_hint"
            android:inputType="number" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/Task2"
            android:textStyle="italic" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_height="wrap_content"
            android:text="@string/sixth" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <RadioButton
                    android:id="@+id/sixth_monday"
                    style="@style/HeaderTextStyle"
                    android:layout_width="@dimen/radio_button_width"
                    android:layout_height="wrap_content"
                    android:text="@string/monday" />

                <RadioButton
                    android:id="@+id/sixth_saturday"
                    style="@style/HeaderTextStyle"
                    android:layout_width="@dimen/radio_button_width"
                    android:layout_height="wrap_content"
                    android:text="@string/saturday" />
                <RadioButton
                    android:id="@+id/sixth_wednesday"
                    style="@style/HeaderTextStyle"
