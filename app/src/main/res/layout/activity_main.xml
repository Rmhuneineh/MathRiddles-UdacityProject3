                    android:text="@string/fifty8" />

                <RadioButton
                    android:id="@+id/ninth_100"
                    style="@style/HeaderTextStyle"
                    android:layout_width="@dimen/radio_button_width"
                    android:layout_height="wrap_content"
                    android:text="@string/hundred" />

                <RadioButton
                    android:id="@+id/ninth_54"
