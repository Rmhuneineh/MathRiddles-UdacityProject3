        </RadioGroup>

        <TextView
            android:text="@string/Task3"
            style="@style/HeaderTextStyle"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:textStyle="italic"/>

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_height="wrap_content"
            android:text="@string/eleventh"/>

        <CheckBox
            android:id="@+id/nineThree"
            style="@style/HeaderTextStyle"
            android:layout_width="@dimen/radio_button_width"
            android:layout_height="wrap_content"
            android:text="@string/nineThree"
            />

        <CheckBox
            android:id="@+id/threeOne"
            style="@style/HeaderTextStyle"
            android:layout_width="@dimen/radio_button_width"
            android:layout_height="wrap_content"
            android:text="@string/threeOne"
            />

        <CheckBox
            android:id="@+id/sixOne"
            style="@style/HeaderTextStyle"
            android:layout_width="@dimen/radio_button_width"
            android:layout_height="wrap_content"
            android:text="@string/sixOne"
            />

        <CheckBox
            android:id="@+id/sixTwo"
            style="@style/HeaderTextStyle"
            android:layout_width="@dimen/radio_button_width"
