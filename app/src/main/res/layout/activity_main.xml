        <TextView
            style="@style/HeaderTextStyle"
            android:layout_height="wrap_content"
            android:text="@string/ninth" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/ninth_58"
                    style="@style/HeaderTextStyle"
                    android:layout_width="@dimen/radio_button_width"
